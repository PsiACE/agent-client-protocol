{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "anyOf": [
    {
      "title": "NewSession",
      "type": "array",
      "maxItems": 2,
      "minItems": 2,
      "prefixItems": [
        {
          "$ref": "#/$defs/NewSessionArguments"
        },
        {
          "$ref": "#/$defs/NewSessionOutput"
        }
      ]
    },
    {
      "title": "LoadSession",
      "$ref": "#/$defs/LoadSessionArguments"
    },
    {
      "title": "Prompt",
      "$ref": "#/$defs/PromptArguments"
    },
    {
      "title": "SessionUpdate",
      "$ref": "#/$defs/SessionUpdate"
    },
    {
      "title": "PermissionTool",
      "type": "array",
      "maxItems": 2,
      "minItems": 2,
      "prefixItems": [
        {
          "$ref": "#/$defs/RequestPermissionArguments"
        },
        {
          "$ref": "#/$defs/RequestPermissionOutput"
        }
      ]
    },
    {
      "title": "WriteTextFile",
      "$ref": "#/$defs/WriteTextFileArguments"
    },
    {
      "title": "ReadTextFile",
      "type": "array",
      "maxItems": 2,
      "minItems": 2,
      "prefixItems": [
        {
          "$ref": "#/$defs/ReadTextFileArguments"
        },
        {
          "$ref": "#/$defs/ReadTextFileOutput"
        }
      ]
    }
  ],
  "$defs": {
    "Annotations": {
      "description": "Optional annotations for the client. The client can use annotations to inform how objects are used or displayed",
      "type": "object",
      "properties": {
        "audience": {
          "type": ["array", "null"],
          "items": {
            "$ref": "#/$defs/Role"
          }
        },
        "lastModified": {
          "type": ["string", "null"]
        },
        "priority": {
          "type": ["number", "null"],
          "format": "double"
        }
      }
    },
    "AudioContent": {
      "description": "Audio provided to or from an LLM.",
      "type": "object",
      "properties": {
        "annotations": {
          "anyOf": [
            {
              "$ref": "#/$defs/Annotations"
            },
            {
              "type": "null"
            }
          ]
        },
        "data": {
          "type": "string"
        },
        "mimeType": {
          "type": "string"
        }
      },
      "required": ["data", "mimeType"]
    },
    "BlobResourceContents": {
      "type": "object",
      "properties": {
        "blob": {
          "type": "string"
        },
        "mimeType": {
          "type": ["string", "null"]
        },
        "uri": {
          "type": "string"
        }
      },
      "required": ["blob", "uri"]
    },
    "ClientTools": {
      "type": "object",
      "properties": {
        "readTextFile": {
          "anyOf": [
            {
              "$ref": "#/$defs/McpToolId"
            },
            {
              "type": "null"
            }
          ]
        },
        "requestPermission": {
          "anyOf": [
            {
              "$ref": "#/$defs/McpToolId"
            },
            {
              "type": "null"
            }
          ]
        },
        "writeTextFile": {
          "anyOf": [
            {
              "$ref": "#/$defs/McpToolId"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": ["requestPermission", "writeTextFile", "readTextFile"]
    },
    "ContentBlock": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "text"
            }
          },
          "$ref": "#/$defs/TextContent",
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "image"
            }
          },
          "$ref": "#/$defs/ImageContent",
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "audio"
            }
          },
          "$ref": "#/$defs/AudioContent",
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "resource_link"
            }
          },
          "$ref": "#/$defs/ResourceLink",
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "resource"
            }
          },
          "$ref": "#/$defs/EmbeddedResource",
          "required": ["type"]
        }
      ]
    },
    "Diff": {
      "type": "object",
      "properties": {
        "newText": {
          "type": "string"
        },
        "oldText": {
          "type": ["string", "null"]
        },
        "path": {
          "type": "string"
        }
      },
      "required": ["path", "oldText", "newText"]
    },
    "EmbeddedResource": {
      "description": "The contents of a resource, embedded into a prompt or tool call result.\n\nIt is up to the client how best to render embedded resources for the benefit\nof the LLM and/or the user.",
      "type": "object",
      "properties": {
        "annotations": {
          "anyOf": [
            {
              "$ref": "#/$defs/Annotations"
            },
            {
              "type": "null"
            }
          ]
        },
        "resource": {
          "$ref": "#/$defs/EmbeddedResourceResource"
        }
      },
      "required": ["resource"]
    },
    "EmbeddedResourceResource": {
      "anyOf": [
        {
          "title": "TextResourceContents",
          "$ref": "#/$defs/TextResourceContents"
        },
        {
          "title": "BlobResourceContents",
          "$ref": "#/$defs/BlobResourceContents"
        }
      ]
    },
    "ImageContent": {
      "description": "An image provided to or from an LLM.",
      "type": "object",
      "properties": {
        "annotations": {
          "anyOf": [
            {
              "$ref": "#/$defs/Annotations"
            },
            {
              "type": "null"
            }
          ]
        },
        "data": {
          "type": "string"
        },
        "mimeType": {
          "type": "string"
        }
      },
      "required": ["data", "mimeType"]
    },
    "LoadSessionArguments": {
      "type": "object",
      "properties": {
        "clientTools": {
          "$ref": "#/$defs/ClientTools"
        },
        "cwd": {
          "type": "string"
        },
        "mcpServers": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/McpServerConfig"
          }
        },
        "sessionId": {
          "type": "string"
        }
      },
      "required": ["mcpServers", "clientTools", "cwd", "sessionId"]
    },
    "McpServerConfig": {
      "type": "object",
      "properties": {
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "command": {
          "type": "string"
        },
        "env": {
          "type": ["object", "null"],
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["command", "args"]
    },
    "McpToolId": {
      "type": "object",
      "properties": {
        "mcpServer": {
          "type": "string"
        },
        "toolName": {
          "type": "string"
        }
      },
      "required": ["mcpServer", "toolName"]
    },
    "NewSessionArguments": {
      "type": "object",
      "properties": {
        "clientTools": {
          "$ref": "#/$defs/ClientTools"
        },
        "cwd": {
          "type": "string"
        },
        "mcpServers": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/McpServerConfig"
          }
        }
      },
      "required": ["mcpServers", "clientTools", "cwd"]
    },
    "NewSessionOutput": {
      "type": "object",
      "properties": {
        "sessionId": {
          "type": "string"
        }
      },
      "required": ["sessionId"]
    },
    "PermissionOption": {
      "type": "object",
      "properties": {
        "kind": {
          "$ref": "#/$defs/PermissionOptionKind"
        },
        "label": {
          "type": "string"
        },
        "optionId": {
          "type": "string"
        }
      },
      "required": ["optionId", "label", "kind"]
    },
    "PermissionOptionKind": {
      "type": "string",
      "enum": ["allowOnce", "allowAlways", "rejectOnce", "rejectAlways"]
    },
    "Plan": {
      "type": "object",
      "properties": {
        "entries": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/PlanEntry"
          }
        }
      },
      "required": ["entries"]
    },
    "PlanEntry": {
      "description": "A single entry in the execution plan.\n\nRepresents a task or goal that the assistant intends to accomplish\nas part of fulfilling the user's request.",
      "type": "object",
      "properties": {
        "content": {
          "description": "Description of what this task aims to accomplish",
          "type": "string"
        },
        "priority": {
          "description": "Relative importance of this task",
          "$ref": "#/$defs/PlanEntryPriority"
        },
        "status": {
          "description": "Current progress of this task",
          "$ref": "#/$defs/PlanEntryStatus"
        }
      },
      "required": ["content", "priority", "status"]
    },
    "PlanEntryPriority": {
      "description": "Priority levels for plan entries.\n\nUsed to indicate the relative importance or urgency of different\ntasks in the execution plan.",
      "type": "string",
      "enum": ["high", "medium", "low"]
    },
    "PlanEntryStatus": {
      "description": "Status of a plan entry in the execution flow.\n\nTracks the lifecycle of each task from planning through completion.",
      "type": "string",
      "enum": ["pending", "in_progress", "completed"]
    },
    "PromptArguments": {
      "type": "object",
      "properties": {
        "prompt": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ContentBlock"
          }
        },
        "sessionId": {
          "type": "string"
        }
      },
      "required": ["sessionId", "prompt"]
    },
    "ReadTextFileArguments": {
      "type": "object",
      "properties": {
        "limit": {
          "type": ["integer", "null"],
          "format": "uint32",
          "minimum": 0
        },
        "line": {
          "type": ["integer", "null"],
          "format": "uint32",
          "minimum": 0
        },
        "path": {
          "type": "string"
        },
        "sessionId": {
          "type": "string"
        }
      },
      "required": ["sessionId", "path"]
    },
    "ReadTextFileOutput": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string"
        }
      },
      "required": ["content"]
    },
    "RequestPermissionArguments": {
      "type": "object",
      "properties": {
        "options": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/PermissionOption"
          }
        },
        "sessionId": {
          "type": "string"
        },
        "toolCall": {
          "$ref": "#/$defs/ToolCall"
        }
      },
      "required": ["sessionId", "toolCall", "options"]
    },
    "RequestPermissionOutcome": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "outcome": {
              "type": "string",
              "const": "canceled"
            }
          },
          "required": ["outcome"]
        },
        {
          "type": "object",
          "properties": {
            "optionId": {
              "type": "string"
            },
            "outcome": {
              "type": "string",
              "const": "selected"
            }
          },
          "required": ["outcome", "optionId"]
        }
      ]
    },
    "RequestPermissionOutput": {
      "type": "object",
      "properties": {
        "outcome": {
          "$ref": "#/$defs/RequestPermissionOutcome"
        }
      },
      "required": ["outcome"]
    },
    "ResourceLink": {
      "description": "A resource that the server is capable of reading, included in a prompt or tool call result.\n\nNote: resource links returned by tools are not guaranteed to appear in the results of `resources/list` requests.",
      "type": "object",
      "properties": {
        "title": {
          "type": ["string", "null"]
        },
        "description": {
          "type": ["string", "null"]
        },
        "annotations": {
          "anyOf": [
            {
              "$ref": "#/$defs/Annotations"
            },
            {
              "type": "null"
            }
          ]
        },
        "mimeType": {
          "type": ["string", "null"]
        },
        "name": {
          "type": "string"
        },
        "size": {
          "type": ["integer", "null"],
          "format": "int64"
        },
        "uri": {
          "type": "string"
        }
      },
      "required": ["name", "uri"]
    },
    "Role": {
      "description": "The sender or recipient of messages and data in a conversation.",
      "type": "string",
      "enum": ["assistant", "user"]
    },
    "SessionUpdate": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "sessionUpdate": {
              "type": "string",
              "const": "userMessage"
            }
          },
          "$ref": "#/$defs/ContentBlock",
          "required": ["sessionUpdate"]
        },
        {
          "type": "object",
          "properties": {
            "sessionUpdate": {
              "type": "string",
              "const": "agentMessageChunk"
            }
          },
          "$ref": "#/$defs/ContentBlock",
          "required": ["sessionUpdate"]
        },
        {
          "type": "object",
          "properties": {
            "sessionUpdate": {
              "type": "string",
              "const": "agentThoughtChunk"
            }
          },
          "$ref": "#/$defs/ContentBlock",
          "required": ["sessionUpdate"]
        },
        {
          "type": "object",
          "properties": {
            "sessionUpdate": {
              "type": "string",
              "const": "toolCall"
            }
          },
          "$ref": "#/$defs/ToolCall",
          "required": ["sessionUpdate"]
        },
        {
          "type": "object",
          "properties": {
            "sessionUpdate": {
              "type": "string",
              "const": "toolCallUpdate"
            }
          },
          "$ref": "#/$defs/ToolCallUpdate",
          "required": ["sessionUpdate"]
        },
        {
          "type": "object",
          "properties": {
            "sessionUpdate": {
              "type": "string",
              "const": "plan"
            }
          },
          "$ref": "#/$defs/Plan",
          "required": ["sessionUpdate"]
        }
      ]
    },
    "TextContent": {
      "description": "Text provided to or from an LLM.",
      "type": "object",
      "properties": {
        "annotations": {
          "anyOf": [
            {
              "$ref": "#/$defs/Annotations"
            },
            {
              "type": "null"
            }
          ]
        },
        "text": {
          "type": "string"
        }
      },
      "required": ["text"]
    },
    "TextResourceContents": {
      "type": "object",
      "properties": {
        "mimeType": {
          "type": ["string", "null"]
        },
        "text": {
          "type": "string"
        },
        "uri": {
          "type": "string"
        }
      },
      "required": ["text", "uri"]
    },
    "ToolCall": {
      "type": "object",
      "properties": {
        "content": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ToolCallContent"
          }
        },
        "kind": {
          "$ref": "#/$defs/ToolKind"
        },
        "label": {
          "type": "string"
        },
        "locations": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ToolCallLocation"
          }
        },
        "rawInput": true,
        "status": {
          "$ref": "#/$defs/ToolCallStatus"
        },
        "toolCallId": {
          "type": "string"
        }
      },
      "required": ["toolCallId", "label", "kind", "status"]
    },
    "ToolCallContent": {
      "anyOf": [
        {
          "title": "contentBlock",
          "$ref": "#/$defs/ContentBlock"
        },
        {
          "title": "diff",
          "type": "object",
          "properties": {
            "diff": {
              "$ref": "#/$defs/Diff"
            }
          },
          "required": ["diff"]
        }
      ]
    },
    "ToolCallLocation": {
      "type": "object",
      "properties": {
        "line": {
          "type": ["integer", "null"],
          "format": "uint32",
          "minimum": 0
        },
        "path": {
          "type": "string"
        }
      },
      "required": ["path"]
    },
    "ToolCallStatus": {
      "oneOf": [
        {
          "description": "The tool call is currently running",
          "type": "string",
          "const": "pending"
        },
        {
          "description": "The tool call is currently running",
          "type": "string",
          "const": "inProgress"
        },
        {
          "description": "The tool call completed successfully",
          "type": "string",
          "const": "completed"
        },
        {
          "description": "The tool call failed",
          "type": "string",
          "const": "failed"
        }
      ]
    },
    "ToolCallUpdate": {
      "type": "object",
      "properties": {
        "content": {
          "type": ["array", "null"],
          "items": {
            "$ref": "#/$defs/ToolCallContent"
          }
        },
        "kind": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolKind"
            },
            {
              "type": "null"
            }
          ]
        },
        "label": {
          "type": ["string", "null"]
        },
        "locations": {
          "type": ["array", "null"],
          "items": {
            "$ref": "#/$defs/ToolCallLocation"
          }
        },
        "rawInput": true,
        "status": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolCallStatus"
            },
            {
              "type": "null"
            }
          ]
        },
        "toolCallId": {
          "type": "string"
        }
      },
      "required": ["toolCallId"]
    },
    "ToolKind": {
      "type": "string",
      "enum": [
        "read",
        "edit",
        "delete",
        "move",
        "search",
        "execute",
        "think",
        "fetch",
        "other"
      ]
    },
    "WriteTextFileArguments": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "sessionId": {
          "type": "string"
        }
      },
      "required": ["sessionId", "path", "content"]
    }
  }
}
