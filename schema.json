{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "anyOf": [
    {
      "$ref": "#/$defs/NewSessionToolArguments"
    },
    {
      "$ref": "#/$defs/LoadSessionToolArguments"
    },
    {
      "$ref": "#/$defs/PromptToolArguments"
    },
    {
      "$ref": "#/$defs/SessionUpdate"
    },
    {
      "type": "array",
      "maxItems": 2,
      "minItems": 2,
      "prefixItems": [
        {
          "$ref": "#/$defs/PermissionToolArguments"
        },
        {
          "$ref": "#/$defs/PermissionToolResponse"
        }
      ]
    },
    {
      "$ref": "#/$defs/WriteTextFileToolArguments"
    },
    {
      "$ref": "#/$defs/ReadTextFileArguments"
    }
  ],
  "$defs": {
    "Annotations": {
      "description": "Optional annotations for the client. The client can use annotations to inform how objects are used or displayed",
      "type": "object",
      "properties": {
        "audience": {
          "type": ["array", "null"],
          "items": {
            "$ref": "#/$defs/Role"
          }
        },
        "lastModified": {
          "type": ["string", "null"]
        },
        "priority": {
          "type": ["number", "null"],
          "format": "double"
        }
      }
    },
    "AudioContent": {
      "description": "Audio provided to or from an LLM.",
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "annotations": {
          "anyOf": [
            {
              "$ref": "#/$defs/Annotations"
            },
            {
              "type": "null"
            }
          ]
        },
        "data": {
          "type": "string"
        },
        "mimeType": {
          "type": "string"
        }
      },
      "required": ["data", "mimeType", "type"]
    },
    "BlobResourceContents": {
      "type": "object",
      "properties": {
        "blob": {
          "type": "string"
        },
        "mimeType": {
          "type": ["string", "null"]
        },
        "uri": {
          "type": "string"
        }
      },
      "required": ["blob", "uri"]
    },
    "ClientTools": {
      "type": "object",
      "properties": {
        "confirmPermission": {
          "anyOf": [
            {
              "$ref": "#/$defs/McpToolId"
            },
            {
              "type": "null"
            }
          ]
        },
        "readTextFile": {
          "anyOf": [
            {
              "$ref": "#/$defs/McpToolId"
            },
            {
              "type": "null"
            }
          ]
        },
        "writeTextFile": {
          "anyOf": [
            {
              "$ref": "#/$defs/McpToolId"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": ["confirmPermission", "writeTextFile", "readTextFile"]
    },
    "ContentBlock": {
      "anyOf": [
        {
          "$ref": "#/$defs/TextContent"
        },
        {
          "$ref": "#/$defs/ImageContent"
        },
        {
          "$ref": "#/$defs/AudioContent"
        },
        {
          "$ref": "#/$defs/ResourceLink"
        },
        {
          "$ref": "#/$defs/EmbeddedResource"
        }
      ]
    },
    "Diff": {
      "type": "object",
      "properties": {
        "newText": {
          "type": "string"
        },
        "oldText": {
          "type": ["string", "null"]
        },
        "path": {
          "type": "string"
        }
      },
      "required": ["path", "oldText", "newText"]
    },
    "EmbeddedResource": {
      "description": "The contents of a resource, embedded into a prompt or tool call result.\n\nIt is up to the client how best to render embedded resources for the benefit\nof the LLM and/or the user.",
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "annotations": {
          "anyOf": [
            {
              "$ref": "#/$defs/Annotations"
            },
            {
              "type": "null"
            }
          ]
        },
        "resource": {
          "$ref": "#/$defs/EmbeddedResourceResource"
        }
      },
      "required": ["resource", "type"]
    },
    "EmbeddedResourceResource": {
      "anyOf": [
        {
          "$ref": "#/$defs/TextResourceContents"
        },
        {
          "$ref": "#/$defs/BlobResourceContents"
        }
      ]
    },
    "Grant": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/GrantId"
        },
        "label": {
          "type": "string"
        }
      },
      "required": ["id", "label"]
    },
    "GrantId": {
      "type": "string"
    },
    "ImageContent": {
      "description": "An image provided to or from an LLM.",
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "annotations": {
          "anyOf": [
            {
              "$ref": "#/$defs/Annotations"
            },
            {
              "type": "null"
            }
          ]
        },
        "data": {
          "type": "string"
        },
        "mimeType": {
          "type": "string"
        }
      },
      "required": ["data", "mimeType", "type"]
    },
    "LoadSessionToolArguments": {
      "type": "object",
      "properties": {
        "clientTools": {
          "$ref": "#/$defs/ClientTools"
        },
        "cwd": {
          "type": "string"
        },
        "mcpServers": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/McpServerConfig"
          }
        },
        "sessionId": {
          "$ref": "#/$defs/SessionId"
        }
      },
      "required": ["mcpServers", "clientTools", "cwd", "sessionId"]
    },
    "McpServerConfig": {
      "type": "object",
      "properties": {
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "command": {
          "type": "string"
        },
        "enabledTools": {
          "description": "If provided, only the specified tools are enabled",
          "type": ["array", "null"],
          "default": null,
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": ["object", "null"],
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["command", "args", "enabledTools"]
    },
    "McpToolId": {
      "type": "object",
      "properties": {
        "mcpServer": {
          "type": "string"
        },
        "toolName": {
          "type": "string"
        }
      },
      "required": ["mcpServer", "toolName"]
    },
    "NewSessionToolArguments": {
      "type": "object",
      "properties": {
        "clientTools": {
          "$ref": "#/$defs/ClientTools"
        },
        "cwd": {
          "type": "string"
        },
        "mcpServers": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/McpServerConfig"
          }
        }
      },
      "required": ["mcpServers", "clientTools", "cwd"]
    },
    "PermissionToolArguments": {
      "type": "object",
      "properties": {
        "possibleGrants": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Grant"
          }
        },
        "toolCall": {
          "$ref": "#/$defs/ToolCall"
        }
      },
      "required": ["toolCall", "possibleGrants"]
    },
    "PermissionToolResponse": {
      "type": "object",
      "properties": {
        "selectedGrant": {
          "$ref": "#/$defs/GrantId"
        }
      },
      "required": ["selectedGrant"]
    },
    "Plan": {
      "type": "object",
      "properties": {
        "entries": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/PlanEntry"
          }
        }
      },
      "required": ["entries"]
    },
    "PlanEntry": {
      "description": "A single entry in the execution plan.\n\nRepresents a task or goal that the assistant intends to accomplish\nas part of fulfilling the user's request.",
      "type": "object",
      "properties": {
        "content": {
          "description": "Description of what this task aims to accomplish",
          "type": "string"
        },
        "priority": {
          "description": "Relative importance of this task",
          "$ref": "#/$defs/PlanEntryPriority"
        },
        "status": {
          "description": "Current progress of this task",
          "$ref": "#/$defs/PlanEntryStatus"
        }
      },
      "required": ["content", "priority", "status"]
    },
    "PlanEntryPriority": {
      "description": "Priority levels for plan entries.\n\nUsed to indicate the relative importance or urgency of different\ntasks in the execution plan.",
      "type": "string",
      "enum": ["high", "medium", "low"]
    },
    "PlanEntryStatus": {
      "description": "Status of a plan entry in the execution flow.\n\nTracks the lifecycle of each task from planning through completion.",
      "type": "string",
      "enum": ["pending", "in_progress", "completed"]
    },
    "PromptToolArguments": {
      "type": "object",
      "properties": {
        "prompt": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ContentBlock"
          }
        },
        "sessionId": {
          "$ref": "#/$defs/SessionId"
        }
      },
      "required": ["sessionId", "prompt"]
    },
    "ReadTextFileArguments": {
      "type": "object",
      "properties": {
        "limit": {
          "type": ["integer", "null"],
          "format": "uint32",
          "minimum": 0
        },
        "line": {
          "type": ["integer", "null"],
          "format": "uint32",
          "minimum": 0
        },
        "path": {
          "type": "string"
        }
      },
      "required": ["path"]
    },
    "ResourceLink": {
      "description": "A resource that the server is capable of reading, included in a prompt or tool call result.\n\nNote: resource links returned by tools are not guaranteed to appear in the results of `resources/list` requests.",
      "type": "object",
      "properties": {
        "title": {
          "type": ["string", "null"]
        },
        "description": {
          "type": ["string", "null"]
        },
        "type": {
          "type": "string"
        },
        "annotations": {
          "anyOf": [
            {
              "$ref": "#/$defs/Annotations"
            },
            {
              "type": "null"
            }
          ]
        },
        "mimeType": {
          "type": ["string", "null"]
        },
        "name": {
          "type": "string"
        },
        "size": {
          "type": ["integer", "null"],
          "format": "int64"
        },
        "uri": {
          "type": "string"
        }
      },
      "required": ["name", "type", "uri"]
    },
    "Role": {
      "description": "The sender or recipient of messages and data in a conversation.",
      "type": "string",
      "enum": ["assistant", "user"]
    },
    "SessionId": {
      "type": "string"
    },
    "SessionUpdate": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "started"
            }
          },
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "userMessage"
            }
          },
          "$ref": "#/$defs/ContentBlock",
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "agentMessage"
            }
          },
          "$ref": "#/$defs/ContentBlock",
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "toolCall"
            }
          },
          "$ref": "#/$defs/ToolCall",
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "plan"
            }
          },
          "$ref": "#/$defs/Plan",
          "required": ["type"]
        }
      ]
    },
    "TextContent": {
      "description": "Text provided to or from an LLM.",
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "annotations": {
          "anyOf": [
            {
              "$ref": "#/$defs/Annotations"
            },
            {
              "type": "null"
            }
          ]
        },
        "text": {
          "type": "string"
        }
      },
      "required": ["text", "type"]
    },
    "TextResourceContents": {
      "type": "object",
      "properties": {
        "mimeType": {
          "type": ["string", "null"]
        },
        "text": {
          "type": "string"
        },
        "uri": {
          "type": "string"
        }
      },
      "required": ["text", "uri"]
    },
    "ToolCall": {
      "type": "object",
      "properties": {
        "content": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolCallContent"
            },
            {
              "type": "null"
            }
          ]
        },
        "id": {
          "$ref": "#/$defs/ToolCallId"
        },
        "kind": {
          "$ref": "#/$defs/ToolKind"
        },
        "label": {
          "type": "string"
        },
        "locations": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ToolCallLocation"
          }
        },
        "status": {
          "$ref": "#/$defs/ToolCallStatus"
        }
      },
      "required": ["id", "label", "kind", "status"]
    },
    "ToolCallContent": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "content": {
              "$ref": "#/$defs/ContentBlock"
            }
          },
          "required": ["content"]
        },
        {
          "type": "object",
          "properties": {
            "diff": {
              "$ref": "#/$defs/Diff"
            }
          },
          "required": ["diff"]
        }
      ]
    },
    "ToolCallId": {
      "type": "string"
    },
    "ToolCallLocation": {
      "type": "object",
      "properties": {
        "line": {
          "type": ["integer", "null"],
          "format": "uint32",
          "minimum": 0
        },
        "path": {
          "type": "string"
        }
      },
      "required": ["path"]
    },
    "ToolCallStatus": {
      "oneOf": [
        {
          "description": "The tool call is currently running",
          "type": "string",
          "const": "inProgress"
        },
        {
          "description": "The tool call completed successfully",
          "type": "string",
          "const": "completed"
        },
        {
          "description": "The tool call failed",
          "type": "string",
          "const": "failed"
        }
      ]
    },
    "ToolKind": {
      "type": "string",
      "enum": ["read", "edit", "search", "execute", "think", "fetch", "other"]
    },
    "WriteTextFileToolArguments": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string"
        },
        "path": {
          "type": "string"
        }
      },
      "required": ["path", "content"]
    }
  }
}
